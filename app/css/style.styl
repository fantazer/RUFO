// See https://www.bram.us/2016/10/07/simple-flexbox-grid-system/ for more details.

$num-columns = 12
$gutter = 1em
$sizes = {
  'xxs': 20, // 320px
  'xs': 30, // 480px
  'sm': 48, // 768px
  'md': 64, // 1024px
  'lg': 75, // 1200px
  'xl': 90, // 1440px
}

.f-grid
	width 100%
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content flex-start
	align-items stretch
	box-sizing border-box
	margin-bottom: 40px
	.column
		margin auto
		overflow hidden
		flex 0 0 100%
		box-sizing border-box
		margin 0 $gutter 0 0

		&:last-child
			margin-right 0

		for $i in 0..$num-columns

			$percentage = unit(($i / $num-columns) * 100, '%')
			$adjustedgutter = $gutter * (1 - ($i / $num-columns))
			$adjustedoffset = ($gutter * (1 - (($num-columns - $i) / $num-columns)))

			&.column-{$i}
				flex-basis "calc(%s - %s)" % ($percentage $adjustedgutter)

			&.offset-{$i}
				margin-left "calc(%s + %s)" % ($percentage $adjustedoffset)

		for $name, $size in $sizes

			// Make sure that the smallest size also applies to the range 0 - $size
			// if ($name == keys($sizes)[0]) {
			//  $size = 0
			//}

			@media (min-width: unit($size, 'em'))
				for $i in 0..$num-columns

					$percentage = unit(($i / $num-columns) * 100, '%')
					$adjustedgutter = $gutter * (1 - ($i / $num-columns))
					$adjustedoffset = ($gutter * (1 - (($num-columns - $i) / $num-columns)))

					&.column-{$name}-{$i}
						flex-basis "calc(%s - %s)" % ($percentage $adjustedgutter)
					&.offset-{$name}-{$i}
						margin-left "calc(%s + %s)" % ($percentage $adjustedoffset)

		&.column-auto
			flex-basis auto
		&.column-stretch
			flex 1 1 auto
